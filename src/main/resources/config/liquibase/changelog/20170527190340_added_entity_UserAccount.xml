    <!--
        Added the entity UserAccount.
    -->
    <changeSet id="20170527190340-1" author="jhipster">
        <createTable tableName="user_account">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="serialized_private_key" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="getting_started" type="boolean">
                <constraints nullable="true" />
            </column>

            <column name="disable_mail" type="boolean">
                <constraints nullable="true" />
            </column>

            <column name="language" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="remember_created_at" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="sign_in_count" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="current_sign_in_at" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="last_sign_in_at" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="current_sign_in_ip" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="last_sign_in_ip" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="created_at" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="updated_at" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="locked_at" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="show_community_spotlight_in_stream" type="boolean">
                <constraints nullable="true" />
            </column>

            <column name="auto_follow_back" type="boolean">
                <constraints nullable="true" />
            </column>

            <column name="auto_follow_back_aspect_id" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="hidden_shareables" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="last_seen" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="export_e" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="exported_at" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="exporting" type="boolean">
                <constraints nullable="true" />
            </column>

            <column name="strip_exif" type="boolean">
                <constraints nullable="true" />
            </column>

            <column name="exported_photos_file" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="exported_photos_at" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="exporting_photos" type="boolean">
                <constraints nullable="true" />
            </column>

            <column name="color_theme" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="post_default_public" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="user_id" type="bigint">
                <constraints unique="true" nullable="true" />
            </column>            <column name="person_id" type="bigint">
                <constraints unique="true" nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="user_account" columnName="remember_created_at" columnDataType="datetime"/>
        <dropDefaultValue tableName="user_account" columnName="current_sign_in_at" columnDataType="datetime"/>
        <dropDefaultValue tableName="user_account" columnName="last_sign_in_at" columnDataType="datetime"/>
        <dropDefaultValue tableName="user_account" columnName="created_at" columnDataType="datetime"/>
        <dropDefaultValue tableName="user_account" columnName="updated_at" columnDataType="datetime"/>
        <dropDefaultValue tableName="user_account" columnName="locked_at" columnDataType="datetime"/>
        <dropDefaultValue tableName="user_account" columnName="last_seen" columnDataType="datetime"/>
        <dropDefaultValue tableName="user_account" columnName="exported_at" columnDataType="datetime"/>
        <dropDefaultValue tableName="user_account" columnName="exported_photos_at" columnDataType="datetime"/>
        
    </changeSet>
</databaseChangeLog>
