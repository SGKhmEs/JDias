<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Post.
    -->
    <changeSet id="20170527190332-1" author="jhipster">
        <createTable tableName="post">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="author" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="guid" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="created_at" type="timestamp">
                <constraints nullable="true" />
            </column>

            <column name="pub" type="boolean">
                <constraints nullable="true" />
            </column>

            <column name="provider_display_name" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="post_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="status_message_id" type="bigint">
                <constraints unique="true" nullable="true" />
            </column>            <column name="reshare_id" type="bigint">
                <constraints unique="true" nullable="true" />
            </column>
            <column name="person_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="post" columnName="created_at" columnDataType="datetime"/>
        
    </changeSet>
</databaseChangeLog>
